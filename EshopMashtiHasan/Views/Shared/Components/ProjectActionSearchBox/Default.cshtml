@model Security.Domain.DTO.ProjectAction.ProjectActionSearchModel

<div class="row">
    <div class="col-md-4">
        <form asp-action="View" id="frmSearch">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ProjectActionName" class="control-label"></label>
                <input asp-for="ProjectActionName" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="PersianTitle" class="control-label"></label>
                <input asp-for="PersianTitle" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="ProjectControllerID" class="control-label"></label>
                <select asp-items="@ViewBag.drpController" class="form-control" asp-for="ProjectControllerID"></select>
            </div>
            <div class="form-group">
                <a id="btnShowAddModal" class="btn btn-primary form-control" data-action="@Url.Action("AddForm","ProjectActionManagement")" onclick="showAddModal(this)">Add</a>
            </div>
        </form>
    </div>
</div>
